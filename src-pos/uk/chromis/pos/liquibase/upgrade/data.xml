<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">




    <property name="boolean.type" value="boolean" dbms="derby, postgresql"/>
    <property name="boolean.type" value="bit" dbms="mysql"/>
   
    <property name="blob.type" value="blob" dbms="derby"/>
    <property name="blob.type" value="bytea" dbms="postgresql"/>
    <property name="blob.type" value="mediumblob" dbms="mysql"/>
     
    

    <!-- This xml is used for any data or changes that needs to be added as part of the upgrade -->
    
    <!-- ***************************************************************************************** -->
    <!--                         Update menu if required                                           -->
    <!-- This section is used to allow dynamic update of menu.root with losing customised entries  -->
    <!-- ***************************************************************************************** -->         
    <!-- Remember to always change the ID details as well -->       
    <changeSet author="Chromis POS" id="Create Dynamic table entries v0.58.1"> 
        <insert tableName="MENUENTRIES"> 
            <column name="ENTRY" value="uk.chromis.pos.sales.JPanelUnlockTables"/>   
            <column name="FOLLOWS" value="uk.chromis.pos.sales.JPanelResetPickupId"/>
            <column name="GRAPHIC" value="/uk/chromis/images/reload.png" />
            <column name="TITLE" value="Menu.Unlocktables" />   
        </insert>                                          
    </changeSet> 
    
    <!-- ***************************************************************************************** -->
    <!--                Update Administrator permissions if required                               -->
    <!-- ***************************************************************************************** -->    
    <changeSet author="Chromis POS" id="Update admin permissiosn v0.58.1">   
        <update tableName="ROLES">           
            <column name="PERMISSIONS" valueBlobResource="/uk/chromis/pos/templates/Role.Administrator.xml"/>   
            <where>ID='0'</where>         
        </update> 
    </changeSet>
    

    <changeSet author="Chromis POS" id="Add Printer.TicketBoxOffice">  
        <preConditions onFail="MARK_RAN">  
            <sqlCheck expectedResult="0">SELECT COUNT(1) FROM RESOURCES WHERE NAME = 'Printer.TicketBoxOffice'</sqlCheck>  
        </preConditions>  
        <insert tableName="RESOURCES">
            <column name="ID" value="74"/>
            <column name="NAME" value="Printer.TicketBoxOffice"/>
            <column name="RESTYPE" valueNumeric="0"/>
            <column name="CONTENT" valueBlobResource="/uk/chromis/pos/templates/Printer.TicketBoxOffice.xml"/>
        </insert>
    </changeSet>
        

    <changeSet author="Chromis POS" id="Add Printer.TicketBoxOfficeFull">  
        <preConditions onFail="MARK_RAN">  
            <sqlCheck expectedResult="0">SELECT COUNT(1) FROM RESOURCES WHERE NAME = 'Printer.TicketBoxOfficeFull'</sqlCheck>  
        </preConditions>  
        <insert tableName="RESOURCES">
            <column name="ID" value="75"/>
            <column name="NAME" value="Printer.TicketBoxOfficeFull"/>
            <column name="RESTYPE" valueNumeric="0"/>
            <column name="CONTENT" valueBlobResource="/uk/chromis/pos/templates/Printer.TicketBoxOfficeFull.xml"/>
        </insert>
    </changeSet>
                      

                        

    <changeSet author="Chromis POS" id="Insert into RATINGS Table vboxoffice">
        <insert tableName="RATINGS">
            <column name="ID" value="0"/>
            <column name="NAME" value="NR"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="1"/>
            <column name="NAME" value="G"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="2"/>
            <column name="NAME" value="PG"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="3"/>
            <column name="NAME" value="PG-13"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="4"/>
            <column name="NAME" value="R"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="5"/>
            <column name="NAME" value="NC-17"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
        <insert tableName="RATINGS">
            <column name="ID" value="6"/>
            <column name="NAME" value="X"/>
            <column name="ACTIVE" valueBoolean="true"/>
        </insert>
    </changeSet>
    
    
</databaseChangeLog>

